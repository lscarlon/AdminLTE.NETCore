@using AdminPanel.Models
@model ExternalLoginConfirmationViewModel
@{
    ViewBag.Title = "Register";
}

<div class="register-box-body">
    <p class="login-box-msg">Associate your @ViewBag.LoginProvider account</p>
    <form asp-controller="Login" asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewBag.ReturnUrl" method="post" class="form-horizontal" role="form">
        <p class="text-info">
            You've successfully authenticated with <strong>@ViewBag.LoginProvider</strong>.
            Please enter a user name for this site below and click the Register button to finish logging in.
        </p>
        
        
        <div class="form-group has-feedback">
            <input asp-for="Email" class="form-control" readonly="readonly">
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            <input asp-for="UserName" class="form-control" >
            <span class="glyphicon glyphicon-user form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback" style="display:none;">
            <input asp-for="Name" class="form-control" >
            <span class="glyphicon glyphicon-user form-control-feedback"></span>
        </div>
        
        <div class="row">
            <div class="col-xs-8">
                <div class="checkbox icheck">
                    <label>
                        <input type="checkbox"> I agree to the <a href="#">terms</a>
                    </label>
                </div>
            </div>
            <!-- /.col -->
            <div class="col-xs-4">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Register</button>
            </div>
            <!-- /.col -->
        </div>
    </form>
    
</div>
<!-- /.form-box -->