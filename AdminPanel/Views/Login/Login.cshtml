@model IdentityLoginViewModel
@using AdminPanel.Models  
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Authentication
@using AdminPanel.Identity
@inject SignInManager<User> signInManager

<!-- /.login-logo -->
<div class="login-box-body">
    <p class="login-box-msg">Sign in to start your session</p>
    <form asp-controller="Login" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group has-feedback">
            <input asp-for="UserName" class="form-control" placeholder="UserName">
            <span asp-validation-for="UserName" class="glyphicon glyphicon-user form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            <input asp-for="Password" class="form-control" placeholder="Password">
            <span asp-validation-for="Password" class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="row">
            <div class="col-xs-8">
                <div class="checkbox icheck">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" /> @Html.DisplayNameFor(m => m.RememberMe) 
                    </label>
                </div>
            </div>
            <!-- /.col -->
            <div class="col-xs-4">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
            </div>
            <!-- /.col -->
        </div>
    </form>
    
    <div class="social-auth-links text-center">
        <p>- OR -</p>
        <form asp-controller="Login" asp-action="ExternalLogin" asp-route-returnurl="@ViewBag.ReturnUrl" method="post" class="form-horizontal" role="form">
            <button type="submit" class="btn btn-block btn-social btn-google btn-flat" id="Google" name="provider" value="Google" title="Sign in using Google+">
                    <i class="fa fa-google-plus"></i>Sign in using Google+
            </button>
            <button type="submit" class="btn btn-block btn-social btn-facebook btn-flat" id="Facebook" name="provider" value="Facebook" title="Sign in using Facebook">
                <i class="fa fa-facebook"></i>Sign in using Facebook
            </button>
        </form>
       
</div>
    
    <a href="#">I forgot my password</a><br>
    <a href="register.html" class="text-center">Register a new membership</a>

</div>
<!-- /.login-box-body -->